{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "esnext",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["components"],
    "exclude": ["node_modules", "dist", "**/__tests__/*"]
  }
  